<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Centered group: logo + tagline -->
    <LinearLayout
        android:id="@+id/centerGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Use ONLY your logo PNG (it already includes the green circle) -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ce_logo"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <!-- Space between logo and tagline -->
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONE ISLAND"
            android:textStyle="italic|bold"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:letterSpacing="0.08"/>

        <TextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THOUSAND WONDERS"
            android:textStyle="italic|bold"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:letterSpacing="0.08"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
