<?xml version="1.0" encoding="utf-8"?>
<!-- Full-bleed post row (no CardView). Icon-only reactions. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F5F6F7" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAvatarVisual"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="centerCrop"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#111111" />

            <TextView
                android:id="@+id/tvHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@handle"
                android:textColor="#6B7280" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow"
            android:textStyle="bold"
            android:textColor="#1D4ED8"
            android:layout_marginEnd="8dp" />

        <!-- Author-only delete -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:minWidth="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#D32F2F"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="@android:color/white"
            app:iconPadding="6dp"
            app:rippleColor="#33FFFFFF" />
    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp"
        android:text="Post description…"
        android:textColor="#111111"
        android:textSize="14sp" />

    <!-- IMAGE (no zoom) -->
    <ImageView
        android:id="@+id/imgThumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="@null"
        android:background="#F2F3F5" />

    <!-- Route + transport -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From → To"
            android:textStyle="bold"
            android:textColor="#111111" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tvTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip_pill"
            android:textColor="#0F172A"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="Transport: Bus • Author recommends" />
    </LinearLayout>

    <!-- NEW: Place name row -->
    <LinearLayout
        android:id="@+id/rowPlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            app:tint="#6B7280"
            android:contentDescription="@null"
            android:src="@android:drawable/ic_menu_mapmode" />

        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place name"
            android:textColor="#111111"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Exact location row -->
    <LinearLayout
        android:id="@+id/rowExactLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            app:tint="#6B7280"
            android:contentDescription="@null"
            android:src="@android:drawable/ic_menu_mylocation" />

        <TextView
            android:id="@+id/tvExactLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exact location"
            android:textColor="#374151"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Reaction row -->
    <LinearLayout
        android:id="@+id/reactionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- LEFT: LIKE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLike"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    app:icon="@drawable/ic_heart_24"
                    app:iconSize="22dp"
                    app:iconTint="#EF4444"
                    app:iconPadding="0dp"
                    app:rippleColor="#22000000"
                    android:contentDescription="Like"/>
            </LinearLayout>

            <!-- MIDDLE: RECOMMEND YES -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecommendYes"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    app:icon="@drawable/ic_thumb_up_24"
                    app:iconSize="22dp"
                    app:iconTint="#10B981"
                    app:iconPadding="0dp"
                    app:rippleColor="#22000000"
                    android:contentDescription="Recommend"/>
            </LinearLayout>

            <!-- RIGHT: RECOMMEND NO -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecommendNo"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    app:icon="@drawable/ic_thumb_down_24"
                    app:iconSize="22dp"
                    app:iconTint="#6B7280"
                    app:iconPadding="0dp"
                    app:rippleColor="#22000000"
                    android:contentDescription="Not recommend"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Counts -->
        <TextView
            android:id="@+id/tvCounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="4dp"
            android:text="0 likes • 0 recommended • 0 not"
            android:textStyle="bold"
            android:textColor="#6B7280" />
    </LinearLayout>

    <!-- Bottom divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F5F6F7" />
</LinearLayout>
